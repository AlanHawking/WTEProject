<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mainFramePic_image"
        android:layout_alignParentTop="true"
        android:src="@drawable/pic404"
        android:adjustViewBounds="true"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignTop="@id/mainFramePic_image"
        android:background="#22000000"
        android:gravity="center_vertical"
        >

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_round"
            android:text="返回"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp" />

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="菜单"
            android:background="@drawable/btn_round"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="点击编辑"
        android:gravity="center"
        android:layout_alignBottom="@id/mainFramePic_image"
        android:background="#33000000"
        android:textColor="#1a1a1a"
        android:id="@+id/mainFramePic_editBanner"
        />



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/mainFramePic_image"
        android:id="@+id/mainFramePic_contentFrame"
        >


    </FrameLayout>

</RelativeLayout>
